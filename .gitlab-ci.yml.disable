# The Docker image that will be used to build your app
image: node:lts


cache:
  key: ${CI_COMMIT_REF_SLUG}
  paths:
    - node_modules/
    - .next/cache
    
pages:
  stage: deploy
  before_script:
  - npm install
  - npx next build
  - find public -mindepth 1 -maxdepth 1 -type d | xargs rm -rf
  - find public -type f -name "*.html" | xargs rm -rf

  script:
    - mv -f kinact-package/* public
  artifacts:
    paths:
      - public
  only:
    - main